{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^.github/workflows/"],
      "matchStrings": [
        "esp_idf_version:\\s*(?<currentValue>v(?:\\d+\\.)*\\d+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "espressif/idf"
    },
    {
      "customType": "regex",
      "fileMatch": ["idf_component.yml$"],
      "datasourceTemplate": "custom.espressif",
      "matchStrings": [
        "(?<depName>[^:]+):\\s*version:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "versioningTemplate": "npm"
    }
  ],
  "customDatasources": {
    "espressif": {
      "defaultRegistryUrlTemplate": "https://components-file.espressif.com/components/{{packageName}}.json",
      "transformTemplates": [
        "{ \"releases\": [ versions.{ \"version\": version, \"releaseTimestamp\": created_at } ], \"homepage\": versions[0].homepage }"
      ]
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchDepNames": ["espressif/idf"],
      "versioning": "loose",
      "allowedVersions": "/^v[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    }
  ]
}
